// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id    Int    @id @default(autoincrement())
  title String
  name  String @unique
  type  String
  logo  String
  link  String
  description String
  fields Field[]

  @@map("services")
}

model Field {
  id           Int      @id @default(autoincrement())
  title        String
  name         String
  type         String
  defaultValue String?
  required     Boolean @default(true)
  options      Option[]

  priceDetails Json?

  serviceId    Int
  service      Service  @relation(fields: [serviceId], references: [id])

  @@map("fields")
}

model Option {
  value   String
  label   String
  price   Float

  fieldId Int
  field   Field  @relation(fields: [fieldId], references: [id])

  @@id([value, fieldId])
  @@map("options")
}